<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12sp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="12sp"
    app:cardBackgroundColor="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12sp">

        <TextView
            android:id="@+id/tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seperator"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/airbnb"
            android:gravity="center_vertical"
            android:text="@string/edit_last_7_days"
            android:textColor="@color/dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/airbnb"
            android:gravity="center_vertical"
            android:text="@string/if_you_forgot_to_mark_your_routine_as_completed_you_can_change_it_here"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/days_check_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/monday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:strokeColor="@color/text"
                app:cardBackgroundColor="@color/text"
                app:cardElevation="0sp"
                android:layout_weight="1"
                android:layout_marginEnd="6sp"
                app:cardCornerRadius="6sp">

                <ImageView
                    android:id="@+id/mondayCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="gone"
                    android:layout_gravity="center" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tuesday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:strokeColor="@color/text"
                app:cardBackgroundColor="@color/text"
                app:cardElevation="0sp"
                android:layout_weight="1"
                android:layout_marginEnd="6sp"
                app:cardCornerRadius="6sp">

                <ImageView
                    android:id="@+id/teusdayCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="gone"
                    android:layout_gravity="center" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/wednesday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:strokeColor="@color/text"
                app:cardBackgroundColor="@color/text"
                app:cardElevation="0sp"
                android:layout_weight="1"
                android:layout_marginEnd="6sp"
                app:cardCornerRadius="6sp">

                <ImageView
                    android:id="@+id/wednessCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/check"
                    android:layout_gravity="center" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/thursday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:strokeColor="@color/text"
                app:cardBackgroundColor="@color/text"
                app:cardElevation="0sp"
                android:layout_weight="1"
                android:layout_marginEnd="6sp"
                app:cardCornerRadius="6sp">

                <ImageView
                    android:id="@+id/thursdayCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="gone"
                    android:layout_gravity="center" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/friday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:strokeColor="@color/text"
                app:cardBackgroundColor="@color/text"
                app:cardElevation="0sp"
                android:layout_weight="1"
                android:layout_marginEnd="6sp"
                app:cardCornerRadius="6sp">

                <ImageView
                    android:id="@+id/fridayCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="gone"
                    android:layout_gravity="center" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/saturday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:strokeColor="@color/text"
                app:cardBackgroundColor="@color/text"
                app:cardElevation="0sp"
                android:layout_weight="1"
                android:layout_marginEnd="6sp"
                app:cardCornerRadius="6sp">

                <ImageView
                    android:id="@+id/saturdayCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="gone"
                    android:layout_gravity="center" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sunday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:strokeColor="@color/text"
                app:cardBackgroundColor="@color/text"
                app:cardElevation="0sp"
                android:layout_weight="1"
                app:cardCornerRadius="6sp">

                <ImageView
                    android:id="@+id/sundayCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="gone"
                    android:layout_gravity="center" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="MON"
            android:gravity="center"
            android:fontFamily="@font/airbnb"
            android:layout_marginEnd="6sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="TUE"
            android:gravity="center"
            android:fontFamily="@font/airbnb"
            android:layout_marginEnd="6sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="WED"
            android:gravity="center"
            android:fontFamily="@font/airbnb"
            android:layout_marginEnd="6sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="THU"
            android:gravity="center"
            android:fontFamily="@font/airbnb"
            android:layout_marginEnd="6sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="FRI"
            android:gravity="center"
            android:fontFamily="@font/airbnb"
            android:layout_marginEnd="6sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="SAT"
            android:gravity="center"
            android:fontFamily="@font/airbnb"
            android:layout_marginEnd="6sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="SUN"
            android:fontFamily="@font/airbnb"
            android:gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:layout_marginVertical="15dp"
            android:fontFamily="@font/airbnb" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>