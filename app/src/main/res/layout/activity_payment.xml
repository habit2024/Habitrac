<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.PaymentActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unleash_the_full_experience"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:fontFamily="@font/airbnb"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ad_free_and_premium_features_await"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/airbnb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginVertical="12sp"
                android:background="@color/border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pros_of_becoming_a_member"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/airbnb"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pro_desc"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/poppins"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/monthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/light"
                android:layout_marginTop="20sp"
                app:cardBackgroundColor="@color/border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12sp">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/supercharge_your_experience_with_our"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp"
                            android:fontFamily="@font/airbnb" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10sp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/airbnb"
                                android:layout_weight="1"
                                android:text="@string/monthly_subscription"
                                android:textColor="@color/dark"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@+id/mony1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_1_99_month"
                                android:textColor="?attr/colorPrimary"
                                android:textSize="18sp"
                                android:fontFamily="@font/airbnb" />

                        </LinearLayout>

                    </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/lifetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12sp">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/elevate_your_experience_with_a"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp"
                            android:fontFamily="@font/airbnb" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10sp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/airbnb"
                                android:layout_weight="1"
                                android:text="@string/lifetime_subscription"
                                android:textColor="@color/dark"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@+id/mony2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_9_99_month"
                                android:textSize="18sp"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="@font/airbnb" />

                        </LinearLayout>

                    </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_anytime"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins" />



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_bg"
        android:padding="12sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ready_to_seize_the_opportunity_tap_upgrade_now_and_embark_on_a_limitless_journey_with_us"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins" />

        <Button
            android:id="@+id/upgrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upgrade_now"
            android:fontFamily="@font/poppins"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>