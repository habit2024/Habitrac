<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10sp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12sp"
    app:cardElevation="0dp"
    app:strokeColor="@color/light"
    app:strokeWidth="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp">
        <RadioButton
            android:id="@+id/radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <EditText
            android:layout_below="@+id/radio_button"
            android:id="@+id/otherq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:hint="Especifica tu opciÃ³n"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/radio_button"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginEnd="12sp"
            android:layout_toLeftOf="@id/time"
            android:fontFamily="@font/airbnb"
            android:text="Wash my face"
            android:textColor="@color/dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/airbnb"
            android:gravity="end|center"
            android:drawableStart="@drawable/time_square"
            android:drawablePadding="10sp"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:text="1 min" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>