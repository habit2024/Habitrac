    <style name="Base.Theme.RoutineApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#238a8a</item>
        <item name="android:textColorPrimary">#E1E1E1</item>
        <item name="colorPrimaryVariant">#D5D8D8</item>
        <item name="colorOnPrimary">@color/white</item>
